.top-detail-ctn {
  height: 252rpx;
  background-color: rgba(246,246,246,1);
  border-bottom: 1rpx solid rgba(240,240,240,1);
  padding-top: 21rpx;
  box-sizing: border-box;
}
.top-detail-wrap{
  height: 100%;
  background-color: #fff;
  box-shadow:0px -4px 18px rgba(194,195,197,.2);
  box-sizing: border-box;
  padding: 0 54rpx;
  display: flex;
  align-items: center;
  width: 100%;
}
.header-img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 5rpx;
}
.detail-r{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding-left: 29rpx;
  height:150rpx;
  flex:1;
  overflow: hidden;
  position: relative;
}
.detail-title{
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  position: relative;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.detail-bottom{
  display: flex;
  align-items: center;
}
.payed-price{
  color:#FE5C00;
  padding-left: 22rpx;
}

.group-btn{
  width:120rpx;
  height:50rpx;
  border:1rpx solid rgba(247,147,30,1);
  border-radius:6rpx;
  font-size:24rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(247,147,30,1);
  display: flex;
  align-items: center;
  justify-content: center;
}
.detail-y-price{
  font-size:24rpx;
  font-family:Adobe Heiti Std R;
  font-weight:normal;
  text-decoration:line-through;
  color:rgba(51,51,51,1);
  padding-left: 10rpx;
  box-sizing: border-box;
}
.detail-price{
  font-size:24rpx;
  font-family:PingFang-SC-Regular;
  font-weight:bold;
  color:rgba(51,51,51,1);
  padding-left: 22rpx;
  box-sizing: border-box;
}