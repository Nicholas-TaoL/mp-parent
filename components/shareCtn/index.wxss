.top-share-ctn {
  height: 327rpx;
  border-bottom: 1rpx solid rgba(240,240,240,1);
  box-sizing: border-box;
  padding: 30rpx 24rpx 20rpx;
}
.top-crn {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 30rpx;
}
.line{
  width:200rpx;
  height:1rpx;
  background:rgba(187,187,187,1);
}
.last-time-wrap {
  display: flex;
  flex: 1;
  font-size:24rpx;
  font-family:PingFang-SC-Regular;
  font-weight:bold;
  color:rgba(51,51,51,1);
  justify-content: center;
}
.time-value {
  color: #FF0000;
}
.middle-ctn{
  height: 130rpx;
  position: relative;
  padding-top: 38rpx;
  display: flex;
  justify-content: center;
}
.header{
  height: 90rpx;
  width: 90rpx;
  border-radius: 50%;
  position: relative;
}
.header-ctn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-right: 28rpx;
  position: relative;
}
.group-leader {
  width: 58rpx;
  height: 28rpx;
  border-radius: 5rpx;
  background-color: #F7931E;
  position: absolute;
  font-size:20rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
  display: flex;
  justify-content: center;
  align-items: center;
  bottom: 30%;
}
.bottom-ctn ,.invitation{
  display: flex;
  justify-content: center;
  align-items: center;
}
.invitation{
  font-size:30rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  width:350rpx;
  height:80rpx;
  background:rgba(254,92,0,1);
  border-radius:6px;
}
