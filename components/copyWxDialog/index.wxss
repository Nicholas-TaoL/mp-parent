.mask-wrap {
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.6);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family:PingFang-SC-Regular;
}
.mask-content-wrap{
  width:86%;
  height:846rpx;
  position:absolute;
  top:50%;
  left:0;
  transform:translateY(-50%);
  margin-left:7%;
  z-index:10000;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.mask-content{
  width:525rpx;
  height:525rpx;
  background:rgba(255,255,255,1);
  border-radius:12rpx;
  position: relative;
}
.top-title {
  width: 100%;
  height: 120rpx;
  border-bottom: 1rpx solid rgba(245,245,246,1);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:36rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.top-content {
  width: 100%;
  height: 170rpx;
  border-bottom: 1rpx solid rgba(245,245,246,1);
  display: flex;
  align-items: flex-end;
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  padding-bottom: 27rpx;
  padding-left: 35rpx;
  box-sizing: border-box;
}
.top-content-des {
  width: 100%;
  height: 130rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 35rpx;
}
.point {
  width:14rpx;
  height:14rpx;
  border-radius: 50%;
  background-color: rgba(153,153,153,1);
}
.c-d-word {
  font-size:24rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  margin-left: 26rpx;
}
.bottom {
  width: 100%;
  height: 100rpx;
  display: flex;
  border-top: 1rpx solid rgba(245,245,246,1);
}
.btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background:rgba(255,255,255,1);
  border-radius:8rpx;
  font-size:36rpx;
  font-weight:400;
  color:rgba(0,0,0,1);
}
.allow {
  color:rgba(22,181,23,1);
  border-left: 1rpx solid rgba(245,245,246,1);
}
.share-btn {
  height: 100rpx;
  width: 50%;
  position: absolute;
  right: 0;
  bottom: 0;
  opacity: 0;
}
