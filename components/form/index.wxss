.form-ctn {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 39rpx 36rpx 64rpx;
}
.name-wrap {
  height: 100rpx;
  width: 100%;
  border:1px solid rgba(154,154,154,.6);
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 14rpx;
  margin-bottom: 30rpx;
}
.left-img {
  height: 56rpx;
  width: 48rpx;
  margin-right: 15rpx;
}
.v-line {
  height: 56rpx;
  width: 1rpx;
  background:rgba(163,161,161,.8);
}
.label ,.weui-input{
  font-size:30rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  box-sizing: border-box;
  padding: 0 15rpx;
}
.input-wrap {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.hide{
  display: none;
}
.show{
  display: block;
}
.code-ctn {
  display: flex;
  margin-bottom: 30rpx;
}
.code-wrap{
  width:160rpx;
  height:100rpx;
  border:1px solid rgba(247,147,30,1);
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(247,147,30,1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.code-left {
  flex: 1;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border:1px solid rgba(154,154,154,.6);
  box-sizing: border-box;
  padding: 0 14rpx;
  margin-right: 10rpx;
}
.introduce-ctn {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 26rpx 16rpx;
  border:1px solid rgba(154,154,154,.6);
  width:630rpx;
  background:rgba(255,255,255,1);
}
.introduce-top {
  display: flex;
  align-items: center;
}
.num-wrap {
  height: 30rpx;
  font-size:30rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  display: flex;
  justify-content: flex-end;
  color:rgba(153,153,153,1);
}
.text-wrap {
  flex: 1;
  padding: 15rpx 0;
  font-size:30rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  min-height: 300rpx;
}
.text-wrap .isHid{
  opciaty:0;
}
