.mask-wrap {
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family:PingFang-SC-Medium;
  font-weight:500;
}
.mask-content-wrap{
  width:86%;
  min-height:424rpx;
  border-radius:15rpx;
  position:absolute;
  top:50%;
  left:0;
  transform:translateY(-50%);
  margin-left:7%;
  z-index:10000;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;

}
.title {
  line-height: 86rpx;
  font-size:32rpx;
  color:rgba(51,51,51,1);

}
.bottom-wrap {
  height: 96rpx;
  width: 100%;
  border-top: 2rpx solid rgba(238,238,238,1);
  margin-top: 40rpx;
  font-size:32rpx;
  color:rgba(51,51,51,1);
  display: flex;
}
.text-area {
  min-height: 200rpx;
  width: 86%;
  border: 2rpx solid rgba(238,238,238,1);
  font-size:32rpx;
  color:rgba(153,153,153,1);
  box-sizing: border-box;
  padding: 15rpx;
}
.text-area textarea{
  width: 100%;
  min-height: 200rpx;
}

.cancel-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
}
.send-btn {
  color: rgba(247,147,30,1)
}
.isSend-ok{
  color: rgba(247,147,30,1)
}
.isSend-err{
  color: #ccc;
}
.left-ling {
  border-right: 2rpx solid rgba(238,238,238,1);
}



