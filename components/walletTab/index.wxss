.wallert-ctn {
  display: flex;
  height: 144rpx;
  border-bottom: 1rpx solid rgba(220,220,220,1);
}
.tab-item-wrap {
  flex: 1;
  border-right: 1px solid  rgba(220,220,220,1);
  display: flex;
  align-items: center;
  justify-content: center;
}
.tab-item-wrap:nth-last-of-type(1){
  border-right: none;
}
.item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.num {
  font-size:34rpx;
  font-family:Adobe Heiti Std R;
  font-weight:normal;
  color:rgba(51,51,51,1);
}
.label {
  font-size:26rpx;
  font-family:Adobe Heiti Std R;
  font-weight:normal;
  color:rgba(102,102,102,1);
}
.num_0{
  color:rgba(247,147,30,1);
}