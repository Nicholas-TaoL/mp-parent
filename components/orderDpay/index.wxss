.dpay-ctn {
  background:rgba(255,255,255,1);
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}
.top-wrap {
  height: 60rpx;
  border-bottom: 1px solid rgba(240,240,240,1);
  box-sizing: border-box;
  padding: 0 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.time {
  font-size:24rpx;
  font-family:Adobe Heiti Std R;
  font-weight:normal;
  color:rgba(153,153,153,1);
}
.pay-type {
  font-size:28rpx;
  font-family:Adobe Heiti Std R;
  font-weight:normal;
  color:rgba(247,147,30,1);
}
.content-wrap{
  height: 160rpx;
  border-bottom: 1px solid rgba(240,240,240,1);
  display: flex;
  box-sizing: border-box;
  padding: 30rpx;
  
}
.header-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 5rpx;
}
.msg {
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  overflow: hidden;
  width: 100%;
   white-space: nowrap;
  text-overflow: ellipsis;
  display: flex;
  flex-direction: column;
  align-items:start;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.bottom-wrap {
  height: 68rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.price {
  font-size:28rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
}
.bottom-wrap .go-pay{
  width:110rpx;
  height:50rpx;
  background:rgba(254,92,0,1);
  border-radius:6rpx;
  font-size:26rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  display: flex;
  justify-content: center;
  align-items: center;

}
.price{
  font-size:24rpx;
  font-family:PingFang-SC-Regular;
  font-weight:bold;
  color:rgba(51,51,51,1);
}