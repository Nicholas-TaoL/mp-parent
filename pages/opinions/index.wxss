/**index.wxss**/
.opinion-ctn {
  height: 100%;
  background-color: rgba(246,246,246,1);
}
.textarea-wrap {
  min-height: 300rpx;
  background:rgba(255,255,255,1);
  border-top: 1px solid rgba(220, 220, 220, 1);
  border-bottom: 1px solid rgba(220, 220, 220, 1);
  padding: 21rpx 35rpx;
  padding-bottom: 90rpx;
  box-sizing: border-box;
  position: relative;
}
.num {
  position: absolute;
  width: 100%;
  height: 50rpx;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: flex-end;
  padding-right: 60rpx;
  box-sizing: border-box;
}
.pic-wrap {
  margin-top: 20rpx;
  min-height: 330rpx;
  background:rgba(255,255,255,1);
  border-top: 1px solid rgba(220, 220, 220, 1);
  border-bottom: 1px solid rgba(220, 220, 220, 1);
  display: flex;
  flex-direction: column;
  padding: 21rpx 36rpx;
}
.pic-label {
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color:rgba(153,153,153,1);
}
.pic-img-wrap {
  flex: 1;
  background-color: #fff;
  display:flex;
  flex-direction:column;
  justify-content:space-between;

}
.pic-images-item {
  width: 140rpx;
  height: 140rpx;
}
.add-img-wrap {
  height: 160rpx;
  width: 160rpx;
  margin-top: 20rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.img-wrap {
  min-height: 108rpx;
  display: flex;
  flex-wrap: wrap;
  position: relative;
}
.close-img {
  width:30rpx;
  height:30rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.img-btn {
  width: 140rpx;
  height: 140rpx;
  border: 1px solid rgba(229,229,229,1);
  border-radius: 1rpx;
  margin-left: 0;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
.picture {
  width: 72rpx;
  height: 60rpx;
}
.submit-wrap {
 margin-top: 50rpx;
 height:100rpx;
 display: flex;
 justify-content: center;
 align-items: center;
}
.submit {
  width:702rpx;
  height:100%;
  background:rgba(247,147,30,1);
  border-radius:50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:36rpx;
  font-family:STHeiti;
  font-weight:400;
  color:rgba(255,255,255,1);

}
.opiniontxt {
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(153,153,153,1);
  width: 100%;
}
