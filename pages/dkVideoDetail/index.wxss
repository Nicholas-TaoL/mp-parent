@import '../../public/index';
.detail-ctn {
  width: 100%;
  height: 100%;
  position: relative;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  font-family:PingFang-SC-Medium;
  font-weight:500;
}

.top-banner{
  width: 100%;
  height: 300rpx;
}
.top-banner swiper {
  height: 100%;
}
.top-banner .slide-image{
  width: 100%;
  height: 100%;
}
.fixed-top {
  width: 100%;
  height: 90rpx;
  box-shadow:0px 4px 8px 0px rgba(0,0,0,0.1);
  background-color: antiquewhite;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 11;
}
.tabs {
  min-height: 250rpx;
  background-color: #fff;
}
.swiper-tab {
  height: 90rpx;
  display: flex;
  background-color: #fff;
  margin-bottom: 10rpx;
  box-shadow:0px 4px 8px 0px rgba(0,0,0,0.1);
}
.swiper-tab-item {
  width: 140rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.list-item {
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
  padding: 0 25rpx;
  justify-content: space-between;
}
.img-wrap {
  width: 100rpx;
  height: 100rpx;
  background-color: #fff;
}
.img-wrap image {
  width: 100%;
  height: 100%;
  border-radius:12rpx 12rpx 0 0;
  background-color: #EBEBEB;
}
.item-right-wrap {
  width: 80%;
  height: 100%;
  display: flex;
  align-items: center;
  border-bottom: 2px solid rgba(242,242,242,1);
  justify-content: space-between;
}
.item-right {
  height: 100%;
  width: 80rpx;
  display: flex;
  align-items: center;
}
.item-left {
  flex: 1;
}
.title {
  font-size:26rpx;
  color:rgba(51,51,51,1);
}
.msg {
  height: 40rpx;
  width: 100%;
  display: flex;
  font-size:20rpx;
  color:rgba(118,118,118,1);
  align-items: center;
  margin-top: 10rpx;
}
.play-state {
  width:50rpx;
  height:26rpx;
  border:1rpx solid rgba(247,147,30,1);
  border-radius:4rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #F7931E;
}
.play-time {
  margin-left: 32rpx;
  margin-right: 40rpx;
}
.play-img-btn {
  width: 30rpx;
  height: 30rpx;
}
.introduce {
  font-size:26rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.active-true {
  color: rgba(247,147,30,1);
  font-size: 26rpx;
  font-weight:500;
}
.active-false {
  font-size:26rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.line {
  width:30rpx;
  height:4rpx;
  background:rgba(247,147,30,1);
}
.line-false {
  background:#fff;
}
.line-true {
  background:rgba(247,147,30,1);
}

/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.scroll-ctn{
  padding-bottom: 110rpx;
}
.scroll-true{
  box-sizing: border-box;
  height: 100%;
}
.scroll-false{
  padding-bottom: 110rpx;
  height: auto;
  box-sizing: content-box;
}
.bottom-wrap {
  height: 105rpx;
  width: 100%;
  bottom: 0;
  left: 0;
  background-color: #fff;
  display: flex;
  border-top:1px solid rgba(213, 215, 216, 1);
  position: fixed;
}
.share-wrap {
  height: 100%;
  width: 194rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 0rpx;
  line-height: 100%;
  position: relative;
}
.share-btn {
  height: 100%;
  width: 194rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  opacity: 0;
  z-index: 33;
}
.share-img {
  width:42rpx;
  height:40rpx;
}
.label {
  margin-top: 9rpx;
  font-size:30rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.buy-wrap {
  flex: 1;
  background:linear-gradient(90deg,rgba(254,190,94,1),rgba(255,137,3,1));
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 72rpx;
}
.p-d-wrap {
  width: 100%;
  display: flex;
  justify-content: space-between;
  color:rgba(255,255,255,1);
  font-weight:400;
}
.price-wrap {
  display: flex;
  align-items: center;
}
.orange-price {
  text-decoration: line-through;
  font-size:28rpx;
}
.vip-price, .buy-des-wrap{
  font-size: 36rpx;
}
.bottom-model{
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,.5);
  position: fixed;
  z-index: 444;
  top: 0;
  left: 0;
}
.model-ctontent {
  width: 100%;
  height: 0;
  background-color: #fff;
  position: fixed;
  z-index: 445;
  left: 0;
  bottom: -764rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 0 24rpx;
  font-weight:bold;
}
.pay-title {
  line-height: 115rpx;
  border-bottom: 1rpx solid rgba(244,244,244,1);
  font-size:36rpx;
  color:rgba(51,51,51,1);
  width: 100%;
  text-align: center;
  position: relative;
}
.closed-img {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 30rpx;
  height: 30rpx;
}
.price {
  font-size:68rpx;
  color:rgba(51,51,51,1);
  margin: 30rpx 0;
}
.pay-des {
  height: 95rpx;
  border-bottom: 1rpx solid rgba(244,244,244,1);
  font-size:32rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  display: flex;
  justify-content: space-between;
  width: 100%;
  align-items: center;
}
.payed-img {
  width: 45rpx;
  height: 38rpx;
  margin-right: 18rpx;
}
.l-des {
  display: flex;
  align-items: center;
  font-weight: 400;
}
.payed-btn {
  width:400rpx;
  height:88rpx;
  background:linear-gradient(90deg,rgba(254,190,94,1),rgba(255,137,3,1));
  border-radius:44rpx;
  margin-top: 136rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:32rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
}

.no-message-img {
  padding: 24rpx 0;
}